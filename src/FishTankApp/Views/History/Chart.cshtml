@model FishTankApp.ViewModels.ChartViewModel

<div class="container">
	<div class="row">
		<div class="col-lg-12">
			<div class="panel panel-default">
				<div class="panel-heading">@Model.Title Chart</div>
				<div class="panel-body">
					<div id="chart"></div>
				</div>
			</div>
		</div>
	</div>
</div>
<script type="text/javascript">
	$(function() {
		$.getJSON("@Model.DataUrl", function(data) {
			Morris.Line({
				element: 'chart',
				data: data,
				xkey: 'timeStamp',
				ykeys: ['value'],
				labels: ['value'],
				resize: true,
				dateFormat: function(d) {
					var date = new Date(d);
					return date.getHours() + ":" + date.getMinutes();
				}
			});
		});
	});
</script>